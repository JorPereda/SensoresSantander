<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_alarma"
        style="@style/Base.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/tv_alarm_namelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: "
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_alarm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nombre sensor"
                android:textSize="21sp"
                app:layout_constraintStart_toEndOf="@+id/tv_alarm_namelabel"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_alarm_medidalabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medida max: "
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_alarm_namelabel" />

            <TextView
                android:id="@+id/tv_alarm_medida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="medida del sensor"
                android:textSize="21sp"
                android:textColor="#f65034"
                app:layout_constraintStart_toEndOf="@id/tv_alarm_medidalabel"
                app:layout_constraintTop_toBottomOf="@id/tv_alarm_name" />

            <TextView
                android:id="@+id/tv_alarm_medidaActuallabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actual: "
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_alarm_medidalabel" />

            <TextView
                android:id="@+id/tv_alarm_medida_actual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="medida del sensor"
                android:textColor="#0000FF"
                android:textSize="21sp"
                app:layout_constraintStart_toEndOf="@id/tv_alarm_medidaActuallabel"
                app:layout_constraintTop_toBottomOf="@id/tv_alarm_medida" />

            <ImageButton
                android:id="@+id/ib_alarm_borrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/baseline_delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>